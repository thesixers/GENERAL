<!DOCTYPE html>
<html lang="en">
<head>
    <title>Registration Form</title>
    <%- include('./snippets/headers') %>
<body>
    <%- include('./snippets/navbar') %>
    <div class="container form-container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-6">
                <div class="form-box">
                    <h3 class="text-center">Register</h3>
                    <form id="reg_form" enctype="multipart/form-data">
                        <div class="form-group mb-3">
                            <input type="text" class="form-control" placeholder="Name of company" name="name">
                            <div class="nameErr text-center text-danger"></div>
                        </div>
                        <div class="form-group mb-3">
                            <input type="file" class="form-control" placeholder="Logo" name="img">
                            <div class="imageErr text-center text-danger"></div>
                        </div>
                        <div class="form-group mb-3">
                            <input type="text" class="form-control" placeholder="Address" name="address">
                            <div class="addressErr text-center text-danger"></div>
                        </div>
                        <div class="form-group mb-3">
                            <input type="email" class="form-control" placeholder="Email" name="email">
                            <div class="emailErr text-center text-danger"></div>
                        </div>
                        <div class="form-group mb-3">
                            <input type="text" class="form-control" placeholder="Phone number" name="phone_no">
                            <div class="phone_noErr text-center text-danger"></div>
                        </div>
                        <div class="form-group mb-3">
                            <input type="password" class="form-control" placeholder="Password" name="password">
                            <div class="passwordErr text-center text-danger"></div>
                        </div>
                        <div class="form-group mb-3">
                            <input type="password" class="form-control" placeholder="Confirm Password" name="confirm_pwd">
                            <div class="confirm_pwdErr text-center text-danger"></div>
                        </div>
                        <button type="submit" class="btn btn-warning w-100 btn-block">Register</button>
                        <p class="text-center mt-3">Already have an account? <a class="text-decoration-none" href="/login">Login</a></p>
                    </form>
                </div>
            </div>
        </div>
    </div>


    <%- include('./snippets/scripts') %>
    <script src="js/register.js"></script>
</body>
</html>
