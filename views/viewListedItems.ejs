<!DOCTYPE html>
<html lang="en">
<head>
    <title>Listed Food</title>
    <%- include('./snippets/dashboardHeaders.ejs') %>
</head>
  <body>
   <%- include('./snippets/dashboardNavbar.ejs') %>

    <div class="container-fluid">
      <div class="row">
        <%- include('./snippets/dashboardSidebar.ejs') %>

        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        
          <h4 class="text-center mt-5 fw-bold fs-3">Listed Food</h4>
          <div class="text-end">
            <a href="/post-food"><button class="btn btn-danger btn-sm">Post Food <i class="fa fa-plus"></i></button></a>
          </div>
          <table id="example" class="table table-striped small table-sm" style="width:100%">
            <thead>
                <tr>
                    <th>Food Name</th>
                    <th>Description</th>
                    <th>Amount</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
              <% context.listedFood.forEach(ListedFood => { %>
                <tr>
                  <td><%= ListedFood.name %></td>
                  <td><%= ListedFood.description %></td>
                  <td><%= ListedFood.amount %></td>
                  <td>
                      <div class="d-flex">
                          <button class="btn btn-danger btn-sm me-2"><i class="fas fa-trash"></i></button>
                          <button class="btn btn-primary btn-sm"><i class="fas fa-pen"></i></button>
                      </div>
                  </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </main>
      </div>
    </div>


    <%- include('./snippets/dashboardScripts.ejs') %>
    <script>new DataTable('#example');</script>
  </body>
</html>